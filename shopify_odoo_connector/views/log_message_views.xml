<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="log_message_view_form" model="ir.ui.view">
        <field name="name">log.message.view.form</field>
        <field name="model">log.message</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="log_date"/>
                            <field name="model"/>
                            <field name="shopify_instance_id"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Message">
                            <group>
                                <field name="name" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="log_message_view_tree" model="ir.ui.view">
        <field name="name">log.message.view.tree</field>
        <field name="model">log.message</field>
        <field name="arch" type="xml">
            <tree create="0" edit="0" delete="0">
                <field name="name"/>
                <field name="log_date"/>
                <field name="model"/>
                <field name="shopify_instance_id"/>
            </tree>
        </field>
    </record>
    <record id="action_log_message_view_tree" model="ir.actions.act_window">
        <field name="name">Log Message</field>
        <field name="res_model">log.message</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem name="Log Message" id="menu_log_message"
              parent="shopify_configuration_menu"
              action="action_log_message_view_tree"/>
</odoo>
