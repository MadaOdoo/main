    <record model="ir.ui.view" id="madkting.madkting_config_tree_view">
      <field name="name">madkting.config.tree.view</field>
      <field name="model">madkting.config</field>
      <field name="type">tree</field>
      <field name="arch" type="xml">
        <tree string="Configuration" >
          <field name="webhook_stock_enabled"/>
          <field name="stock_source_multi"/>
          <field name="company_id"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="madkting.madkting_config_form_view">
      <field name="name">madkting.config.form.view</field>
      <field name="model">madkting.config</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Configuration" >
          <group>
            <group>
              <separator string="General"/>
              <field name="company_id"/>
              <field name="service_url"/>
            </group>
          </group>
          <notebook>
            <page string="General">
              <group>
                <group>
                  <field name="webhook_stock_enabled"/>
                  <field name="stock_source_multi"/>
                  <field name="stock_source_channels"/>
                  <field name="stock_quant_available_quantity_enabled"/>
                  <field name="log_enabled"/>
                  <field name="product_custom_fields"/>
                </group>
                <group>
                  <field name="validate_partner_exists"/>
                  <field name="validate_barcode_exists"/>
                  <field name="validate_sku_exists"/>
                  <field name="validate_id_exists"/>  
                  <field name="simple_description_enabled"/>
                  <field name="product_shared_catalog_enabled" />
                </group>
              </group>
            </page>
            <page string="Ventas">
              <group>
                <group>                  
                  <field name="orders_unconfirmed"/>
                  <field name="orders_unconfirmed_by_stock"/>
                  <field name="orders_unconfirmed_stock_src"/>
                  <field name="orders_unconfirmed_by_ff_type"/>
                  <field name="orders_unconfirmed_ff_types"/>
                  <field name="validate_address_invoice"/>
                  <field name="required_invoice_address_fields"/>
                </group>
                <group>
                  <field name="shipping_webhook_enabled"/>
                  <field name="update_order_name"/>
                  <field name="update_order_name_pack"/>
                  <field name="orders_force_cancel"/>
                  <field name="orders_line_warehouse_enabled"/>
                  <field name="order_remove_tax_default"/>
                </group>
              </group>
            </page>
            <page string="Facturas">
              <group>
                <group>                  
                  <field name="invoice_webhook_enabled"/>
                  <field name="invoice_doc_type" required="invoice_webhook_enabled" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_prefix_file" required="invoice_webhook_enabled" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_add_pdf_file" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_prefix_pdf_file" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_save_pdf_attachment" invisible="not invoice_webhook_enabled"/>
                </group>
                <group>
                  <field name="invoice_country" required="invoice_webhook_enabled" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_currency" required="invoice_webhook_enabled" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_separator" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_serie" invisible="not invoice_webhook_enabled"/>
                  <field name="invoice_partner_vat" invisible="not invoice_webhook_enabled"/>
                </group>
              </group>
            </page>
            <page string="Dropship">
              <group>
                <group>                  
                  <field name="dropship_enabled"/>
                  <field name="dropship_picking_type" required="dropship_enabled" invisible="not dropship_enabled"/>
                  <field name="dropship_webhook_enabled" required="dropship_enabled" invisible="not dropship_enabled"/>
                  <field name="dropship_default_route_id" required="dropship_enabled" invisible="not dropship_enabled"/>
                  <field name="dropship_route_id" required="dropship_enabled" invisible="not dropship_enabled"/>
                  <field name="dropship_mto_route_id" required="dropship_enabled" invisible="not dropship_enabled"/>
                </group>
                <group>
                  
                </group>
              </group>
            </page>
          </notebook>
        </form>
      </field>
    </record>

