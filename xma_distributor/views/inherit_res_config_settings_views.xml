<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_config_settings_view_form_distribuitor" model="ir.ui.view">
            <field name="name">inherit.res.config.setting.view.form</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='pos_technical_section']" position="after">
                    <h2>Vales</h2>
                    <div class="row mt16 o_settings_container" id="vales_section">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                              <div class="row">
                                <label for="percentage" string="Porcentaje (%) para las distribuidoras"/>
                                <field name="percentage"/>
                              </div>  
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>