<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mada_search_inherit_list" model="ir.ui.view">
        <field name="name">mada.search.inherit.list</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="before">
                <field name="image_1024" widget="image" options="{'size': [32,32]}" string="Imagen" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>