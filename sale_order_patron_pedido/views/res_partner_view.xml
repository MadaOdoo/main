<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_partner_patron_pedido_form" model="ir.ui.view">
            <field name="name">wiev.partner.patron.pedido.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='internal_notes']" position="after">
                    <page name="patron_pedido" string="Listado de Corridas">
                        <group>
                            <group>
                                <field name="descripcion"/>
                                <field name="show_tallas_medias"/>
                            </group>
                        </group>
                        <field name='patron_pedido_line_ids'>
                            <tree editable="bottom">
                                <field name="sequence" widget="handle"/>
                                <field name="name_corrida" required="1"/>
                                
                                <field name="talla_21"/>
                                <field name="talla_21_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_22"/>
                                <field name="talla_22_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_23"/>
                                <field name="talla_23_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_24"/>
                                <field name="talla_24_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_25"/>
                                <field name="talla_25_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_26"/>
                                <field name="talla_26_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_27"/>
                                <field name="talla_27_5" column_invisible="not parent.show_tallas_medias"/>
                                <field name="talla_28"/>
                                
                                <field name="total_pares"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>