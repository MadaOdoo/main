<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_order_patron_pedido_form" model="ir.ui.view">
            <field name="name">wiev.order.patron.pedido.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
              
              <xpath expr="//form/header" position="inside">
                <button name="calculate_order_line_talla_ids" type="object" string="Calcular Resumen"/>
              </xpath>

              <xpath expr="//form/sheet/notebook/page[@name='order_lines']" position="after">

                <page name="sale_order_line_talla" string="Resumen de Pedido">

                  <field name="has_talla_21_5" invisible="1"/>
                  <field name="has_talla_22_5" invisible="1"/>
                  <field name="has_talla_23_5" invisible="1"/>
                  <field name="has_talla_24_5" invisible="1"/>
                  <field name="has_talla_25_5" invisible="1"/>
                  <field name="has_talla_26_5" invisible="1"/>
                  <field name="has_talla_27_5" invisible="1"/>
                  <field name="show_tallas_enteras" invisible="1"/>

                  <field name='order_line_talla_ids' readonly="1">

                    <tree editable="false">

                        <field name="has_uom_par" invisible="1"/>

                        <!-- ####################################################### -->
                        
                        <!--<field name="order_line_id" readonly="1" <field name="product_template_image" widget="image" class="oe_avatar" options="{'preview_image': 'product_template_image'}" style="width: 4px; height: 4px;"/>/>-->
                        <field name="product_template_image" widget="image" options="{'preview_image': 'product_template_image'}" style="width: 6px important!;"/>

                        <!--<t t-jquery="th[data-name='product_template_image']" t-operation="attributes">
                            <attribute name="style">text-align: left;</attribute>
                        </t>-->
                        
                        <field name="product_template_id" readonly="1"/>
                        <field name="product_id" readonly="1" optional="hide"/>
                        <field name="product_uom_qty" readonly="1"/>
                        <field name="product_uom" readonly="1"/>

                        <field name="talla_21" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_21_5" column_invisible="not parent.has_talla_21_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_22" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_22_5" column_invisible="not parent.has_talla_22_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_23" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_23_5" column_invisible="not parent.has_talla_23_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_24" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_24_5" column_invisible="not parent.has_talla_24_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_25" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_25_5" column_invisible="not parent.has_talla_25_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_26" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_26_5" column_invisible="not parent.has_talla_26_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_27" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>

                        <field name="talla_27_5" column_invisible="not parent.has_talla_27_5 or not parent.show_tallas_enteras" readonly="not has_uom_par"/>
                        
                        <field name="talla_28" column_invisible="not parent.show_tallas_enteras" readonly="not has_uom_par"/>


                        <field name="price_unit" readonly="1"/>
                        <field name="tax_id" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                        <field name="discount" readonly="1"/>
                        <field name="price_subtotal" readonly="1"/>
                        <field name="price_total" readonly="1"/>

                    </tree>
                  </field>

                  <group>
                    <group>

                        <field name="contador_items_totales"/>
                        <field name="contador_numero_total_productos"/>

                    </group>
                  </group>

                </page>

              </xpath>

              <!-- ###########  AGREGANDO IMAGEN A LA GRILLA DE LA SO ### -->
              <xpath expr="//form/sheet/notebook/page[@name='order_lines']/field[@name='order_line']/tree/field[@name='product_template_id']" position="before">

                  <field name="product_template_image" widget="image" options="{'preview_image': 'product_template_image'}" style="width:6px important!;"/>

              </xpath>

              <!-- ############################################ -->

              <xpath expr="//form/sheet/notebook/page[@name='order_lines']/group[@name='note_group']" position="before">

                <group>
                  <group>

                      <field name="contador_items_totales"/>
                      <field name="contador_numero_total_productos"/>

                  </group>
                </group>

              </xpath>

            


              <div class='oe_chatter' position="replace">
              
              </div>

              <xpath expr="//form/sheet/notebook" position="after">
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
              </xpath>

            </field>

        </record>

   </data>
</odoo>